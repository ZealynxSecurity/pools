{
  "name": "gcred-contracts",
  "version": "0.0.0",
  "description": "Typescript functions for interacting with gcred contracts",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:contracts": "forge build",
    "build:types": "mkdir -p typechain && typechain --target=ethers-v5 ./out/**/*[^metadata].json --out-dir typechain/ --show-stack-traces",
    "clean": "npm-run-all clean:*",
    "clean:broadcast": "rimraf broadcast",
    "clean:contracts": "rimraf out",
    "clean:types": "rimraf typechain",
    "deploy:contracts:local": "source .env.local && forge script script/Demo.s.sol --fork-url $FORK_URL --private-key $DEPLOYER_PRIVATE_KEY --target-contract DemoDeploy --broadcast -vvvv",
    "start:node": "anvil",
    "test": "forge test -vvv",
    "test:watch": "forge test -w -vvv",
    "test:contract": "forge test -vvv --match-contract",
    "test:watch:contract": "forge test -w -vvv --match-contract"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.1.0",
    "cross-env": "^7.0.3",
    "npm-run-all2": "^6.0.2",
    "rimraf": "^3.0.2",
    "typechain": "^8.1.0"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.6.8",
    "ethers": "^5.6.9"
  },
  "files": [
    "typechain"
  ]
}
